<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_general_settings" model="ir.ui.view">
        <field name="name">Install Textblock Addons</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id"
               ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='companies']" position='after'>
                <h2>Textblock</h2>
                <div class="row mt16 o_settings_container" name="textblock">
                    <div class="col-12 col-lg-6 o_setting_box" id="textblock_sale">
                        <div class="o_setting_left_pane">
                            <field name="module_ife_textblock_sale"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_ife_textblock_sale"/>
                            <div class="text-muted">
                                Use Textblock for Sale
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="textblock_invoice">
                        <div class="o_setting_left_pane">
                            <field name="module_ife_textblock_invoice"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_ife_textblock_invoice"/>
                            <div class="text-muted">
                                Use Textblock for Invoice
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="textblock_purchase">
                        <div class="o_setting_left_pane">
                            <field name="module_ife_textblock_purchase"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_ife_textblock_purchase"/>
                            <div class="text-muted">
                                Use Textblock for Purchase
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="textblock_stock">
                        <div class="o_setting_left_pane">
                            <field name="module_ife_textblock_stock"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_ife_textblock_stock"/>
                            <div class="text-muted">
                                Use Textblock for Stock
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="textblock_repair">
                        <div class="o_setting_left_pane">
                            <field name="module_ife_textblock_repair"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_ife_textblock_repair"/>
                            <div class="text-muted">
                                Use Textblock for Repair
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
